{
    "name": "Notion Job Tracker",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A Job Tracker Chrome Extension using your job tracking Notion database.",
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "https://api.notion.com/*"
    ],
    "side_panel": {
        "default_path": "popup.html"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}